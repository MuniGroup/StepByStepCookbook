<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
    
    <style name="Theme.Cookbookred" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_cookbookred</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Cookbookred</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cookbookred</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Cookbookred</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Cookbookred</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Cookbookred</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_cookbookred</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_cookbookred</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Cookbookred</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Cookbookred.Widget</item>

    </style>

    <style name="ActionBar.Solid.Cookbookred" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_cookbookred</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_cookbookred</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_cookbookred</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Cookbookred</item>
    </style>

    <style name="ActionBar.Transparent.Cookbookred" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_cookbookred</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Cookbookred</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Cookbookred.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Cookbookred</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cookbookred</item>
    </style>

</resources>